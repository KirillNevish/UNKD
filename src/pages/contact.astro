            <p class="flex items-center">
              <Icon class="text-gray-400" name="uil:envelope" />
              <a class="pl-3" href="mailto:admin@unkd.com.ua">admin@unkd.com.ua</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
