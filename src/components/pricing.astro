---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-white">{plan.name}</h4><p
        class="mt-3 text-2xl font-bold text-white md:text-2xl">
        {
          plan.price && typeof plan.price === "object"
            ? plan.price.monthly
            : plan.price
        }
      </p>
    </div>
    {
      plan.features.map((item) => (
        <div class="text-gray-800" style="min-height: 194px;">
          <div style="height: 24px;" />
          <p class="pl-1">{item}</p>
        </div>
      ))
    }
    <div class="flex mt-8">
      <Link
        href={plan.button.link || "#"}
        block
        style={plan.popular ? "primary" : "outline"}>
        {plan.button.text || "Get Started"}
      </Link>
    </div>
  </div>
</div>

<style>
  h4 {
    color: #f8f8f8;
  }
</style>
